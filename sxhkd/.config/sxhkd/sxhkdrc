#Apps
super + Return
  kitty

super + @d
  rofi -show run -show-icons

super + b
  librewolf

super + f
  thunar

#Rofi power-menu script
super + k
  rofi -show p -modi "p:~/.config/rofi/scripts/rofi-power-menu --choices=shutdown/reboot/suspend/logout"

#Notification center (github.com/phuhl/linux_notification_center)
super + n
  kill -s USR1 $(pidof deadd-notification-center)

#Screenshot
Print
  flameshot gui

#Color picker (xcolor)
ctrl + Print
  xcolor

#Workspaces
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'paces

super + l
  i3lock -B sigma -e

super + shift + e
  bspc quit

super + shift + r
  bspc wm -r

super + p
  feh --bg-fill --randomize ~/gruvbox-walls/*

super + shift + p
  feh --bg-fill ~/gruvbox-walls/stairs.jpg

#Hardware
super + ctrl + F3
  amixer set Master 10%+

super + ctrl + F2
  amixer set Master 10%-

super + ctrl + F1
  amixer -D pulse set Master 1+ toggle

super + ctrl + F6
  brightnessctl set +5%

super + ctrl + F5
  brightnessctl set 5%-

XF86AudioLowerVolume
  amixer set Master 5%-

XF86AudioRaiseVolume
  amixer set Master 5%+

#Media player controls
XF86AudioPlay
	playerctl play-pause
XF86AudioNext
	playerctl next
XF86AudioPrev
	playerctl previous

#Window Management
super + Tab
  bspc node -t {floating,tiled}

#kills window
super + q
  bspc node -c

#kills all instances of program
super + {_,shift + }q
    bspc node -k

alt + Tab
  bspc node -f next.local.!hidden.window

super + {Up,Down,Left,Right}
  {bspc node -z top 10 10; bspc node -z bottom -10 -10, bspc node -z bottom 10 10; bspc node -z top -10 -10, bspc node -z left 10 10; bspc node -z right -10 -10, bspc node -z right 10 10; bspc node -z left -10 -10 }

super + shift + {Up,Down,Left,Right}
  bspc node -s {north,south,west,east}

super + space
  bspc node -t \~fullscreen

