#
# These things are run when an Openbox X Session is started.
# You may place a similar script in $HOME/.config/openbox/autostart
# to run user-specific things.
#

# If you want to use GNOME config tools...
#
#if test -x /usr/lib/openbox/gnome-settings-daemon >/dev/null; then
#  /usr/lib/openbox/gnome-settings-daemon &
#elif which gnome-settings-daemon >/dev/null 2>&1; then
#  gnome-settings-daemon &
#fi

# If you want to use XFCE config tools...
#
#xfce-mcs-manager &

(sleep 2s && picom -b --backend glx) &
(sleep 3s && xinput set-prop 12 340 1) &
(sleep 3s && xinput set-prop 11 318 1) &
(sleep 3s && xinput set-prop 10 318 1) &
(sleep 2s && xinput set-prop 11 320 1) &
(sleep 2s && setxkbmap si) &
(sleep 1s && xfce4-panel) &
(sleep 2s && nitrogen --restore) &
(sleep 1s && pcmanfm --desktop) &
(sleep 1s && opensnap -d) &
